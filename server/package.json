{
	"name": "gateway-server",
	"version": "1.0.0",
	"description": "Server responsible for communicating with all moving parts",
	"main": "index.js",
	"scripts": {
		"test": "npm run clean && jest",
		"clean": "rimraf dist coverage",
		"start:prod": "tsc && NODE_ENV=prod node dist/server.js",
		"start:dev": "NODE_ENV=dev ts-node-dev --poll --respawn --transpileOnly server.ts"
	},
	"dependencies": {
		"@gkampitakis/mongo-client": "^2.0.0",
		"apollo-server-fastify": "^2.12.0",
		"dotenv": "^8.2.0",
		"fastify": "^2.13.1",
		"fastify-cors": "^3.0.3",
		"graphql-redis-subscriptions": "^2.2.1",
		"node-fetch": "^2.6.0",
		"pino-pretty": "4.0.0",
		"redis": "^3.0.2"
	},
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^25.2.1",
		"@types/node": "^13.9.0",
		"@types/redis": "^2.8.18",
		"jest": "^25.1.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.2.1",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.2"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/resolver.ts",
			"!src/**/typeDef.ts",
			"!src/**/schema.ts",
			"!src/**/constants.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 92,
				"functions": 92,
				"lines": 92,
				"statements": 92
			}
		}
	},
	"author": "Georgios Kampitakis",
	"license": "ISC"
}
